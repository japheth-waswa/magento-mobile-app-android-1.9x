<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <id.arieridwan.lib.PageLoader
       android:id="@+id/prodImageLoader"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       app:setLoadingImage="@drawable/ic_loader"
       app:setLoadingText="Loading Images"/>
   <com.japhethwaswa.magentomobileone.model.HackyViewPager
       android:id="@+id/productImagesViewPager"
       android:layout_width="match_parent"
       android:layout_height="397dp" />
   <com.rd.PageIndicatorView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_centerHorizontal="true"
       app:piv_animationType="thinWorm"
       app:piv_dynamicCount="true"
       app:piv_interactiveAnimation="true"
       app:piv_radius="3dp"
       app:piv_selectedColor="@color/colorAccent"
       app:piv_unselectedColor="@color/black"
       app:piv_viewPager="@id/productImagesViewPager" />
</RelativeLayout>

</layout>
