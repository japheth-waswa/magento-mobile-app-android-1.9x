<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/main_view_pager_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/alladin_forever_young_3"/>

    <TextView
        android:id="@+id/main_view_pager_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="100dp"
        android:text="some title text comes here"
        android:textColor="@android:color/white"
        android:textSize="27sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/main_view_pager_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp"
        android:text="some title text comes here and also goes there what do you say"
        android:textColor="@android:color/white"
        android:textSize="23sp"/>

</FrameLayout>